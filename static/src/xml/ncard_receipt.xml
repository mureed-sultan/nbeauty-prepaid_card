<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="nbeauty_prepaid_card.OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//div[@class='before-footer']" position="after">
            <t t-if="receipt.receipt_ncard_data">
                <div style="margin: 10px 0; padding: 10px; border-top: 1px dashed #000; border-bottom: 1px dashed #000;">
                    <div style="font-weight: bold; text-align: center; margin-bottom: 8px;">
                        N CARD TRANSACTION DETAILS
                    </div>
                    <table width="100%">
                        <tr>
                            <td width="50%">Card Number:</td>
                            <td style="text-align: right;">
                                <t t-esc="receipt.receipt_ncard_data['card_no'] or ''"/>
                            </td>
                        </tr>
                        <tr>
                            <td>Previous Balance:</td>
                            <td style="text-align: right;">
                                <t t-esc="('%.2f' % receipt.receipt_ncard_data['previous_balance']) + ' AED'"/>
                            </td>
                        </tr>
                        <tr>
                            <td>Amount Used:</td>
                            <td style="text-align: right;">
                                <t t-esc="('%.2f' % receipt.receipt_ncard_data['amount_used']) + ' AED'"/>
                            </td>
                        </tr>
                        <tr>
                            <td>New Balance:</td>
                            <td style="text-align: right;">
                                <t t-esc="('%.2f' % receipt.receipt_ncard_data['new_balance']) + ' AED'"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </t>
            <t t-if="not receipt.receipt_ncard_data">
                <div style="text-align:center; padding: 10px 0; border-top: 1px dashed #000;">
                    -------------------------
                </div>
            </t>
        </xpath>
    </t>
</templates>
