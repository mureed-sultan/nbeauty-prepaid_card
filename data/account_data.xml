<odoo>
  <data noupdate="1">

    <!-- Liability Account -->
    <record id="ncard_liability_account" model="account.account" forcecreate="False">
      <field name="name">N Card Liability</field>
      <field name="code">NCARDLIAB</field>
      <field name="account_type">liability_current</field>
      <field name="reconcile">True</field>
    </record>

    <!-- Sales Account -->
    <record id="ncard_sales_account" model="account.account" forcecreate="False">
      <field name="name">N Card Sales</field>
      <field name="code">NCARDSALES</field>
      <field name="account_type">income</field>
      <field name="reconcile">False</field>
    </record>

    <!-- Bonus Expense -->
    <record id="ncard_bonus_account" model="account.account" forcecreate="False">
      <field name="name">N Card Bonus Expense</field>
      <field name="code">NCARDBONUS</field>
      <field name="account_type">expense</field>
      <field name="reconcile">False</field>
    </record>

    <!-- Adjustment Expense -->
    <record id="ncard_adjustment_account" model="account.account" forcecreate="False">
      <field name="name">N Card Adjustment</field>
      <field name="code">NCARDADJ</field>
      <field name="account_type">expense</field>
      <field name="reconcile">False</field>
    </record>

    <!-- Journal -->
    <record id="account_journal_ncard" model="account.journal" forcecreate="False">
      <field name="name">N Card</field>
      <field name="code">NCARD</field>
      <field name="type">general</field>
      <field name="company_id" ref="base.main_company"/>
      <field name="default_account_id" ref="ncard_liability_account"/>
    </record>

  </data>
</odoo>
